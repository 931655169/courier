<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
      <ImageView
          android:id="@+id/image_express"
          android:layout_width="100dp"
          android:layout_height="80dp"
      />
      <LinearLayout
          android:id="@+id/txt_express"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_toRightOf="@id/image_express"
          android:orientation="vertical">
        <TextView
            android:id="@+id/txt_express_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="中通"
        />
        <TextView
            android:id="@+id/txt_express_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            tools:text="71970064918122"
        />
        <TextView
            android:id="@+id/txt_express_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="已签收"
        />
      </LinearLayout>
    </RelativeLayout>
  </android.support.v7.widget.CardView>
</FrameLayout>
