<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

  <EditText
      android:id="@+id/edt_express_tab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableLeft="@mipmap/number"
      android:hint="输入快递单号"
      android:layout_gravity="center"
      android:layout_marginTop="100dp"
      android:drawablePadding="20dp"
      android:maxLength="14"
      tools:text="11846198880700"
  />
  <com.yyydjk.library.DropDownMenu
      android:id="@+id/dropDownMenu"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="20dp"
      app:ddmenuTextSize="20sp"
      app:ddtextUnselectedColor="#444444"
      app:ddtextSelectedColor="#2196f3"
      app:dddividerColor="@color/white"
      app:ddunderlineColor="@color/white"
      app:ddmenuSelectedIcon="@mipmap/selecter"
      app:ddmaskColor="@color/white"
      app:ddmenuBackgroundColor="@color/white"
      android:gravity="center"
      app:ddmenuUnselectedIcon="@mipmap/unselecter"/>
    <Button
        android:id="@+id/btn_ifsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_search"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:text="查询"
        android:textColor="@color/colorPrimary"
        />
</LinearLayout>